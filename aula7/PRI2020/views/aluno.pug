extends layout
block content
    .w3-card-4
        header.w3-container.w3-teal
            h3 Informação do Aluno
            .w3-container
                table(class="w3-table-all")
                    tr(class="w3-light-grey")
                        th Número
                        th Nome
                        th Git
                            tr(class="w3-light-grey")
                                th=lista.Número
                                th=lista.Nome
                                th
                                     a(href=lista.Git)= lista.Git

                p
                h4 TPCs
                table(class="w3-table-all")
                    tr(class="w3-light-grey")
                        th TPC
                            each val, index in lista.tpc
                                if(val==1)
                                    pre ☑ TPC #{index+1} : Feito

            h3
                a(href="/alunos/editar/"+lista._id) Editar Informações do aluno  
            p
                a(href="/alunos/delete/"+lista._id method="DELETE") Remover Aluno
            footer(class="w3-cotainer w3-teal")
                p  
                    a(href="/alunos") Voltar à Lista de Alunos  
                p PRI2020